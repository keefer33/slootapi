# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# DATABASE_URL=mongodb://localhost:27017/slootapi
# DATABASE_URL=postgresql://username:password@localhost:5432/slootapi

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Pipedream Configuration (Optional - only needed if using Pipedream tools)
# PIPEDREAM_CLIENT_ID=your_pipedream_client_id
# PIPEDREAM_CLIENT_SECRET=your_pipedream_client_secret
# PIPEDREAM_PROJECT_ID=your_pipedream_project_id
# PIPEDREAM_ENVIRONMENT=production

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# BFL (Black Forest Labs) Configuration
BFL_API_KEY=your_bfl_api_key_here

# Coolify Configuration
COOLIFY_API_KEY=your_coolify_api_key_here
COOLIFY_BASE_URL=https://app.coolify.io
